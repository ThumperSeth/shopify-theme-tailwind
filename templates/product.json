{
  "sections": {
    "big-product": {
      "type": "big-product-viewer",
      "disabled": true,
      "settings": {
      }
    },
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": false
          }
        }
      },
      "block_order": [
        "title",
        "price",
        "variant_picker",
        "buy_buttons"
      ],
      "settings": {
        "enable_sticky_info": false,
        "hide_variants": false,
        "enable_video_looping": false
      }
    },
    "lifestyle-images": {
      "type": "lifestyle-images",
      "settings": {
      }
    },
    "product-features": {
      "type": "product-features",
      "settings": {
        "custom_liquid": "{{ product.metafields.global.features }}"
      }
    },
    "product-fitment": {
      "type": "product-fitment",
      "settings": {
        "custom_liquid": "{{ product.metafields.global.fitment }}"
      }
    },
    "product-videos": {
      "type": "product-video",
      "settings": {
        "custom_liquid": "<iframe width=\"100%\" height=\"315\" src=\"https:\/\/{{ product.metafields.custom-video.custom_video.value }}\" title=\"YouTube video player\" frameborder=\"0\" allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\" allowfullscreen><\/iframe>"
      }
    },
    "product-specs": {
      "type": "product-specs",
      "settings": {
      }
    },
    "product-docs": {
      "type": "product-docs",
      "settings": {
      }
    },
    "product-reviews": {
      "type": "product-reviews",
      "settings": {
      }
    },
    "product-related-products": {
      "type": "product-related-products",
      "settings": {
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "image_ratio": "adapt",
        "show_secondary_image": false,
        "add_image_padding": false,
        "show_image_outline": true,
        "show_vendor": false,
        "show_rating": false
      }
    }
  },
  "order": [
    "big-product",
    "main",
    "lifestyle-images",
    "product-features",
    "product-fitment",
    "product-videos",
    "product-specs",
    "product-docs",
    "product-reviews",
    "product-related-products",
    "product-recommendations"
  ]
}
