<style>
  .product-fitment-title {
		background-color: #fff;
    	font-family: Rajdhani;
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-fitment-content {
		background-color: #fff;
      	font-family: 'Roboto', sans-serif;
      	font-weight: normal;
      	line-height: 1.6;
      	font-size: initial;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
    .product-fitment-content ul {
       list-style-type: disc;
    }

  .fitment {
        font-size:1.2rem;
        background-color: /*rgba(0, 0, 0, 0.7) #444;*/
        background: rgb(255,255,255);
        /*background: linear-gradient(180deg, rgba(153,153,153,1) 0%, rgba(238,236,236,1) 5%);*/
        /*background: linear-gradient(180deg, rgba(153,153,153,1) 0%, rgba(216,230,237,1) 5%);*/
        color: #222;
        border-radius: 0 0 5px 5px;
        /*box-shadow: 10px 10px 5px #ccc;*/
        border: 0px dashed #fff;
        column-count:1;
    }
  @media screen and (min-width: 750px) {
     .fitment {
        column-count:2;
    }
  }
  
  .product-fitment-section {
  	
  }
</style>
{% if product.metafields.global.fitment != blank %}
<div class="product-fitment-section w-full flex flex-wrap mx-left justify-center">
  <!--	<div class="product-section-title product-fitment-title w-full text-3xl font-bold p-10 shadow-lg">
		FITMENT GUIDE
	</div>-->
  	<div class="w-full p-10 pr-20 bg-gray-200">
	<div class="product-fitment-content w-full p-5 shadow-2xl rounded-lg border-0 mx-10">
     	<div class="product__accordion mt-0 lg:px-20 md:px-10 sm:px-5 mb-5">
            <details>
              <summary>
                <div class="summary__title">
                  {% render 'icon-accordion', icon:ruler %}
                  <h2 class="h4 accordion__title text-4xl pb-5">
                    Product Fitment Guide
                  </h2>
                </div>
                {% render 'icon-caret' %}
              </summary>
              <div class="accordion__content fitment lg:text-xl md:text-lg sm:text-md">
                {{ product.metafields.global.fitment }}
              </div>
            </details>
        </div>		
    </div>
	</div>
</div>
{% endif %}


{% schema %}
{
  "name": "Product Fitment",
  "settings": []
}
{% endschema %}
