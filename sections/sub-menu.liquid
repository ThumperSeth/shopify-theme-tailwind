          {% if product.url contains product_type %} 
          <a style="color:red;" href="{{ collection.current_vendor | within:collection }}/{{ product_type }}">{{ product_type }}</a>
          {% else %}
          <a href="{{ collection.current_vendor | within:collection }}/{{ product_type }}">{{ product_type }}</a>
