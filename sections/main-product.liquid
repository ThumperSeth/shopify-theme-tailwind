  /************************************/
  /* addAllItems function             */
  /* accepts: array of variant IDs    */
  /* add all ids in array to cart     */
  /************************************/
  	/**************************************************************/
	/* cage product javascript by seth nobles for thumperfab
	/**************************************************************/
  var cageColorCode = "X"; //set cage color initially to default value of RAW
  var cageBrowCode = "H";  //set cage brow initially to default value of Hi 
  var cageBaseSKU = "{{ product.selected_or_first_available_variant.sku | split: "-" | first }}"; // find the base SKU minus color and brow data
