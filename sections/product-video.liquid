<style>
  .product-video-title {
		background-color: #ccc;
    	font-family: Rajdhani;
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-video-content {
		background-color: #eee;
      	font-family: Roboto;
      	font-weight: normal;
      	line-height: 1.6;
      	font-size: 100%;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
</style>


<section class="product-video-section w-full flex flex-wrap mx-auto justify-center">
  	<div class="product-video-title w-full text-3xl font-bold p-10">
		PRODUCT VIDEOS
	</div>
	<div class="product-video-content w-full p-10">
		{{ section.settings.custom_liquid }}
	</div>
</section>
	

{% schema %}
{
  "name": "t:sections.product-video.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.product-video.settings.custom_liquid.label",
      "info": "t:sections.product-video.settings.custom_liquid.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.product-video.presets.name"
    }
  ]
}
{% endschema %}
