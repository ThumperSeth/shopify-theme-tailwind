<section class="product-docs-section w-full">
  	<div class="product-section-title product-docs-title w-full text-3xl font-bold p-10">
		PRODUCT INSTALLATION
	</div>
    <div class="bg-white py-6 sm:py-8 lg:py-12">
      <div class="w-3/4 px-4 md:px-8 mx-auto">
        <div class="flex flex-col sm:flex-row justify-between items-center bg-gray-100 rounded-lg gap-4 p-4 md:p-8">
        <img src="https://cdn.shopify.com/s/files/1/0258/5424/6963/files/file-video-icon_50x50.png?v=1640198933"/>
          <div>
            <h2 class="text-gray-700 text-xl md:text-2xl font-bold">{{ product.title | upcase }} PRODUCT INSTALLATION VIDEO</h2>
          </div>
			<div class="w-full flex justify-center md:justify-end lg:justify-end">
          <a href="{{ product.metafields.global.manual | file_url }}" class="inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 w-64 py-3">WATCH NOW</a>
          </div>
        </div>
        <div>&nbsp;</div>
        <div class="flex flex-col sm:flex-row justify-between items-center bg-gray-100 rounded-lg gap-4 p-4 md:p-8">
        <img src="https://cdn.shopify.com/s/files/1/0258/5424/6963/files/PDF_icon_large_868fc778-38bc-4657-9cee-6b48a48b8f34_50x50.png?v=1593114919%20style="/>
          <div>
            <h2 class="text-gray-700 text-xl md:text-2xl font-bold">{{ product.title | upcase }} PRODUCT MANUAL</h2>
            <p class="text-gray-600">version 1.0</p>
          </div>
			<div class="w-full flex justify-center md:justify-end lg:justify-end">
          <a href="{{ product.metafields.global.manual | file_url }}" class="inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 w-64 py-3">DOWNLOAD NOW</a>
          </div>
        </div>
      </div>
    </div>
</section>
	

	
