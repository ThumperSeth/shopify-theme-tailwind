<style>
  
  .product-docs-section {
    background-color:#eee; 
  }
  .product-docs-title {
		background-color: #ccc;
    	font-family: Rajdhani;
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-docs-content {
		background-color: #eee;
      	font-family: 'Teko', san-serif;
      	font-weight: normal;
      	line-height: 1.6;
      	font-size: 100%;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
      	font: 5vmin/1.3 Serif;
        font-size: 22px;
        color: transparent;
    }
    .product-docs-content a {
      color:#222;
      font-family: 'Teko', san-serif;
    }
  .product-docs-content a:hover {
      text-decoration:underline;      
    }
  	.ball {
  		position: absolute;
  		border-radius: 100%;
  		opacity: 0.7;
	}
</style>
<script>
  // Some random colors
const colors = ["#3CC157", "#2AA7FF", "#1B1B1B", "#FCBC0F", "#F85F36"];

const numBalls = 50;
const balls = [];

for (let i = 0; i < numBalls; i++) {
  let ball = document.createElement("div");
  ball.classList.add("ball");
  ball.style.background = colors[Math.floor(Math.random() * colors.length)];
  ball.style.left = `${Math.floor(Math.random() * 100)}vw`;
  ball.style.top = `${Math.floor(Math.random() * 100)}vh`;
  ball.style.transform = `scale(${Math.random()})`;
  ball.style.width = `${Math.random()}em`;
  ball.style.height = ball.style.width;
  
  balls.push(ball);
  let draweringboard = document.getElementById['product-docs'];
  draweringboard.innerHTML += ball;
}

// Keyframes
balls.forEach((el, i, ra) => {
  let to = {
    x: Math.random() * (i % 2 === 0 ? -11 : 11),
    y: Math.random() * 12
  };

  let anim = el.animate(
    [
      { transform: "translate(0, 0)" },
      { transform: `translate(${to.x}rem, ${to.y}rem)` }
    ],
    {
      duration: (Math.random() + 1) * 2000, // random duration
      direction: "alternate",
      fill: "both",
      iterations: Infinity,
      easing: "ease-in-out"
    }
  );
});

</script>
<section class="product-docs-section w-full">
  	<div class="product-docs-title w-full text-3xl font-bold p-10">
		PRODUCT DOCS
	</div>
    <div class="w-full inline-flex">
        <div id="product-docs" class="product-docs-content w-auto p-10 block m-auto">
          <a href="{{ product.metafields.global.manual | file_url }}">
            <img src="https://cdn.shopify.com/s/files/1/0258/5424/6963/files/PDF_icon_large_868fc778-38bc-4657-9cee-6b48a48b8f34.png?v=1593114919%20style="/>
            Download Product Manual
          </a>
        </div>
        <div class="w-auto">
            <iframe class="my-20" width="560" height="315" src="https://www.youtube.com/embed/c_s-fkNzvac" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>  
        </div>
        <div class="w-auto text-3xl font-bold p-20" style="background-color:#eee; m-auto">
          We're not saying you're gonna need help with this, but here it is, just in case.
        </div>
   </div>
</section>
	
