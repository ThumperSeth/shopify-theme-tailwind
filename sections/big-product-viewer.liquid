
<div class="w-full grid flex justify-items-center">

	
      <span class="text-6xl text-align-left p-20 pt-0 mt-20" style="font-family: teko;">{{ product.title }}</span>
  	
  
      
      <model-viewer bounds="tight" src="https://cdn.shopify.com/s/files/1/0258/5424/6963/files/Ranger_1000_FWB-front.glb" 
                    ar ar-modes="webxr scene-viewer quick-look" 
                    camera-controls environment-image="neutral" 
                    poster="https://modelviewer.dev/poster.webp" 
                    shadow-intensity="1" 
                    auto-rotate
                    style="width:80%; height: 1081px; margin-top:-300px;">

          <div class="progress-bar hide" slot="progress-bar">
              <div class="update-bar"></div>
          </div>
          <button slot="ar-button" id="ar-button">
              View in your space
          </button>
          <div id="ar-prompt">
              <img src="https://modelviewer.dev/shared-assets/icons/hand.png">
          </div>
      </model-viewer>
		&nbsp;
 
    	<div class="imgHolder absolute z-2 -mt-0">
