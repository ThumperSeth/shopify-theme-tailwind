<style>
  .product-features-container {
  		background:
          linear-gradient(27deg, #151515 5px, transparent 5px) 0 5px,
          linear-gradient(207deg, #151515 5px, transparent 5px) 10px 0px,
          linear-gradient(27deg, #222 5px, transparent 5px) 0px 10px,
          linear-gradient(207deg, #222 5px, transparent 5px) 10px 5px,
          linear-gradient(90deg, #1b1b1b 10px, transparent 10px),
          linear-gradient(#1d1d1d 25%, #1a1a1a 25%, #1a1a1a 50%, transparent 50%, transparent 75%, #242424 75%, #242424);
        background-color: #131313;
        background-size: 20px 20px; 
  }
  .product-features-title {
		background-color: #ccc;
    	font-family: 'Rajdhani';
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-features-content {
      	font-family: 'Teko', 'Roboto';
      	font-weight: normal;
      	line-height: 1.8;
        font-size: 2rem;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
    .product-features-content ul {
       list-style-type: disc;
       
    }
</style>


<div class="product-features-section w-full flex flex-wrap mx-auto justify-center shadow-2xl">
  	<div class="product-section-title product-features-title w-full text-3xl font-bold p-10 shadow-lg">
		PRODUCT FEATURES
	</div>
    <div class="product-features-container flex flex-wrap justify-center mx-auto p-10">
        <div class="lg:w-1/2 sm:w-5/6 mx-auto flex flex-shrink justify-center items-center">
          <img class="w-5/6 h-auto" src="https://cdn.shopify.com/s/files/1/0258/5424/6963/files/ranger_1000_FWB_trans-1.png?v=1640121581"/>
        </div>
        <div class="product-features-content rounded-lg p-10 lg:w-1/2 sm:w-full lg:text-1rem md:text-5xl sm:text-3xl mx-auto text-gray-200 flex justify-center items-center">
          {{ product.metafields.global.features }}
        </div>
    </div>
</div>


	

