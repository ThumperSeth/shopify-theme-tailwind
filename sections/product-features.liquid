<style>
  .product-features-title {
		background-color: #ccc;
    	font-family: Rajdhani;
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-features-content {
		background-color: #eee;
      	font-family: Roboto;
      	font-weight: normal;
      	line-height: 1.6;
      	font-size: 100%;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
        max-width:75%;
        margin:2rem auto;
    }
    .product-features-content ul {
       list-style-type: disc;
       
    }
</style>


<section class="product-features-section w-full flex flex-wrap mx-auto justify-center">
  	<div class="product-features-title w-full text-3xl font-bold p-10">
		PRODUCT FEATURES
	</div>
	<div class="product-features-content w-full p-10 shadow-xl">
		{{ section.settings.custom_liquid }}
	</div>
</section>
	

{% schema %}
{
  "name": "t:sections.product-features.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.product-features.settings.custom_liquid.label",
      "info": "t:sections.product-features.settings.custom_liquid.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.product-features.presets.name"
    }
  ]
}
{% endschema %}
