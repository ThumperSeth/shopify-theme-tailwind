{%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
{%- assign productPictures = product.media | where: "media_type", "image" -%}

<div class="product-features-section w-full inline-flex mx-auto justify-center shadow-2xl bg-black">
  	<!--<div class="product-section-title product-features-title w-full text-3xl font-bold p-10 shadow-lg">
		FEATURES
	</div>-->
        <div class="product-features-container flex flex-wrap justify-center mx-auto p-10">
            {% for pic in productPictures %}
            {% if pic.alt contains "features" %}  
              <div id="thumby-{{ forloop.index | escape }}"class="product-features-image-wrapper  lg:w-1/3 sm:w-5/6 mx-auto flex flex-shrink justify-center items-center">
                <img class="w-full h-full" style="width:max-content; height:auto;" src="{{ pic.src | img_url: "1024x" }}" alt="{{ pic.alt }}" onClick="swapImages('{{ pic.src | img_url: "1024x1024" }}');" />
              </div>
          <div style="margin-left:-350px" id="thumby-{{ forloop.index | escape }}"class="product-features-image-wrapper  lg:w-1/3 sm:w-5/6 mx-auto flex flex-shrink justify-center items-center">
                <img class="w-full h-full" style="width:max-content; height:auto;" src="{{ pic.src | img_url: "1024x" }}" alt="{{ pic.alt }}" onClick="swapImages('{{ pic.src | img_url: "1024x1024" }}');" />
              </div>
          <div style="margin-left:-1050px" id="thumby-{{ forloop.index | escape }}"class="product-features-image-wrapper  lg:w-1/3 sm:w-5/6 mx-auto flex flex-shrink justify-center items-center">
                <img class="w-full h-full" style="width:max-content; height:auto;" src="{{ pic.src | img_url: "1024x" }}" alt="{{ pic.alt }}" onClick="swapImages('{{ pic.src | img_url: "1024x1024" }}');" />
              </div>
        </div>
       {% endif %} 
