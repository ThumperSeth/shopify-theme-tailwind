<style>
  .product-features-title {
		background-color: #ccc;
    	font-family: Rajdhani;
        -webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
    }
	.product-features-content {
		background-color: #eee;
      	font-family: Roboto;
      	font-weight: normal;
      	line-height: 1.6;
      	font-size: initial;
    	-webkit-text-size-adjust: 100%;
      	-webkit-font-smoothing: antialiased;
        margin:5rem auto 0rem;
    }
    .product-features-content ul {
       list-style-type: disc;
       
    }
</style>


<div class="product-features-section w-full flex flex-wrap mx-auto justify-center">
  	<div class="product-features-title w-full text-3xl font-bold p-10">
		PRODUCT FEATURES
	</div>
  	<div class="pb-10">
	<div class="product-features-content w-5/6 p-10 shadow-xl rounded-lg border-2 pl-10">
     		{{ product.metafields.global.features }}
      	</div>
	</div>
</div>

	

{% schema %}
{
  "name": "t:sections.product-features.name",
  "tag": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.product-features.settings.custom_liquid.label",
      "info": "t:sections.product-features.settings.custom_liquid.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.product-features.presets.name"
    }
  ]
}
{% endschema %}
