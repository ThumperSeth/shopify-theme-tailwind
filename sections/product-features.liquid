<style>


    .product-features-title {
        font-family: 'Teko';
        -webkit-text-size-adjust: 100%;
        -webkit-font-smoothing: antialiased;
        text-align: left;
    }
    
    .product-features-content {
        font-family: 'Teko', 'Roboto';
        font-weight: normal;
        line-height: 1.8;
        font-size: x-large;
        -webkit-text-size-adjust: 100%;
        -webkit-font-smoothing: antialiased;
    }
    
    .product-features-content ul {
        list-style-type: disc;
    
    }
    
    .product-features-image-wrapper {
        -webkit-animation: bounce-in-bottom 1.1s both;
        animation: bounce-in-bottom 1.1s both;
    }
    
    </style>
    
    {%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
    {%- assign productPictures = product.media | where: "media_type", "image" -%}
    <div>
        <h3 class="product-features-title text-white bg-black text-8xl pt-10 pl-20 pb-0">FEATURES</h3>
    </div>
    <div class="product-features-section w-full grid lg:grid-cols-2 sm:grid-cols-1 mx-auto justify-center shadow-2xl bg-black">
        <div class="product-features-container flex flex-wrap justify-center mx-auto ml-20 p-0">
            {% for pic in productPictures %}
            {% if pic.alt contains "features" %}
            <div style="height:400px; margin-top:0; margin-left:15rem; z-index:10; opacity:1" id="thumby-{{ forloop.index | escape }}" class="product-features-image-wrapper  lg:w-full sm:w-5/6 mx-auto flex flex-shrink justify-center items-center">
                <img class="w-full h-full" style="width:max-content; height:auto;" src="{{ pic.src | img_url: '1024x1024' }}" alt="{{ pic.alt }}" onClick="swapImages('{{ pic.src | img_url: '1024x1024' }}');" />
            </div>
        </div>
        {% endif %}
        {% endfor %}
        <div class="product-features-content rounded-lg flex-wrap p-10 lg:w-full sm:w-full lg:text-5xl md:text-4xl sm:text-3xl mx-auto text-gray-200 flex justify-center items-center">
            <div>{{ product.metafields.global.features }}</div>
        </div>
	</div>
    
    {% schema %}
    {
    "name": "Product Features",
    "settings": []
    }
    {% endschema %}