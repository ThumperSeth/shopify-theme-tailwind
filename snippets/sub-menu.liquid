{% assign url_parts = request.path | split: "/" %}
<!-- DETECT BRAND IN URL -->
{% for part in url_parts %}
{% case part %}
	{% when "polaris" %}
		{% assign brandColor = "#305799" %}
		{% break %}
	{% when "yamaha" %}
		{% assign brandColor = "#CCCCCB" %}
		{% break %}
	{% when "can-am" %}
		{% assign brandColor = "#fdc832" %}
		{% break %}
	{% when "tracker" %}
		{% assign brandColor = "#262526" %}
		{% break %}
	{% when "honda" %}
		{% assign brandColor = "#e0262f" %}
		{% break %}
	{% else %}
		{% assign brandColor = "#FFFFFF" %}
{% endcase %}

{% endfor %}
<style>
  .collection-SubMenu-Section {
  	{%- case request.page_type -%}
    {%- when "collection" -%}
    	display: block;
  	{%- else -%}	
    	display: none; 
